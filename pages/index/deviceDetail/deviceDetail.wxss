.segmentedControl {
    margin: 18px auto;
    /*水平居中*/
    /* margin: 30px auto; */
    display : flex ; 
    flex-flow : row;
    /*边框为2px 主色调为蓝*/
    border: 2px solid #ffffff;
    /*圆角6px*/
    border-radius: 6px;
    /*控件宽度*/
    width: 302px;
    /*控件高度*/
    height: 30px;
}

/*普通文本*/
.segmentedControl text {
    /*水平排列*/
    /* float: left; */
    /*宽度为控件宽度的1/3 再减去2px的右边框*/
    width: 75px;
    /*字体大小*/
    font-size: 15px;
    /*主色调*/
    color: #ffffff;
    /*行高，与控件高度相等*/
    line-height: 30px;
    /*文本水平居中*/
    text-align: center;
    /*右边距*/
    border-right: 2px solid #ffffff;

}
/*选中状态文本*/
.segmentedControl text.selected {
    /*同主色调*/
    background-color:#ffffff;
    /*前景色为白色*/
    color: rgb(17, 135, 165);
}

/*最后一个分组按钮*/
.segmentedControl text.last {
    /*不必右边框*/
    border-right: 0px;
    /*高度也不必减少2px，就是控件高度的1/3*/
    width: 75px;
}
